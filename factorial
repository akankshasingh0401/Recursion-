import java.io.*;
import java.util.*;

public class Main {

    public static void main(String[] args) throws Exception {
       Scanner sc=new Scanner(System.in);
       int n=sc.nextInt();
       int f=factorial(n);
       System.out.println(f);
    }

  public static int factorial(int n){
       if(n==1)
       {
            return 1;
            
       }
        int k=factorial(n-1);
        int y=n*k;

      return y;       
        
        
        
    }

}
